
<div class="container-login">
    <h2 align="middle">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :email, class: "login-email-label"%><br />
          <%= f.email_field :email, autofocus: true, class:"login-email-field"%>
        </div>

          <div class="field">
            <%= f.label :password, class:"login-password"%><br />
            <%= f.password_field :password, autocomplete: "off", class:"login-password-field" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
    <% end %>
  <%= render "devise/shared/links" %>
</div>

